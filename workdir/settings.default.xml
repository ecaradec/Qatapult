<?xml version="1.0"?>
<settings>
	<general>
		<font>Arial</font>
		<skin>default</skin>
	</general>
	<hotKeys>
		<toggleKey>32</toggleKey>
		<toggleModifier>4</toggleModifier>
	</hotKeys>
	<rules>
		<rule>
			<arg>FILE</arg>
			<arg>
                <lbl>Explore here</lbl>
                <ico>icons\defaultverb.png</ico>
			</arg>
			<cmd>explorer.exe</cmd>
			<args>/e,/root,"$0.rdirectory"</args>
		</rule>
		<rule>
			<arg>FILE</arg>
			<arg>
                <lbl>Cmd here</lbl>
                <ico>icons\command.png</ico>
			</arg>
			<cmd>cmd.exe</cmd>
			<workdir>$0.rdirectory</workdir>
		</rule>
    </rules>
</settings>
